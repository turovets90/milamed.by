-var main_menu =['Главная','Услуги', 'Цены','Акции','О компании', 'Отзывы','Вопрос-ответ', 'Статьи','Контакты'];

footer
    .container
        .row
            .col-4.col-sm-4.col-md-2.col-xl-2.d-none.d-xl-block
                .logo
                    a.logo__link(href="#")
                        img(src="img/logo.svg")
            .col-12.col-sm-12.col-md-12.col-xl-10
                .main_menu
                    ul.nav
                        for menu_item,index in main_menu
                            if index == 0
                                li.active
                                    a(href="" + menu_item + '.html')=menu_item
                            else
                                li
                                    a(href="" + menu_item + '.html')=menu_item
                .header__contacts_row
                    .header__col.mr-md-3.order_2
                        .header__location
                            button.header__btn.location_btn(type="button" id="location" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            .header_dropdown.dropdown-menu(aria-labelledby="location")
                                p <strong>г. Минск,<br> ул. Богдановича, 118</strong><br> (ТД "Некрасовский")

                    .header__col.order_3
                        .header__time
                            button.header__btn.time_btn(type="button" id="time" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            .header_dropdown.dropdown-menu(aria-labelledby="time")
                                span <b>пн-пт:</b> 9.00-20.00
                                span <b>сб:</b> 9.00-15.00
                                span <b>вс:</b> выходной

                    .header__col.mr-md-3.order_4
                        .header__phone
                            button.header__btn.phone_btn(type="button" id="phone" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            .header_dropdown.dropdown-menu(aria-labelledby="phone")
                                ul
                                    li
                                        a(href="tel:+375 (29) 683 27 31") <strong>+375 (29) 683 27 31</strong>
                                    li
                                        a(href="tel:+375 (33) 327 27 31") <strong>+375 (33) 327 27 31</strong> (Viber)

                    .header__col.order_5
                        .header__tel
                            button.header__btn.tel_btn(type="button" id="tel" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            .header_dropdown.dropdown-menu(aria-labelledby="tel")
                                ul
                                    li
                                        a(href="tel:+375 (17) 258 39 39") <strong>+375 (17) 258 39 39</strong>

                    .header__col.order_1
                        button.btn__default.order_call(data-toggle="modal" data-target="#") Заказать звонок



